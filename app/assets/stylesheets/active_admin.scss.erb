/* Main Content */
#active_admin_content {
  @extend .row;
  background-color: #f4f4f4;
  width: 100%;
  max-width: 1170px;
  padding-left: 0 !important;
  padding-right: 0 !important;

  &.without_sidebar {
    #main_content_wrapper { @extend .col-md-12; background-color: white;}
  }

  &.with_sidebar {
    #main_content_wrapper { @extend .col-md-9; background-color: white;}
    #sidebar              {
      @extend .col-md-3;
      float: right;
      padding-right: 0;
      #filters_sidebar_section {
        @extend .well;
        border: none;
        border-radius: 0px;
        background-color: white;
      }
    }
  }
}

.active_admin.logged_out {
  #active_admin_content {
    max-width: unset;
  }
}

.row-main_details {
  display: none;
}
/* Tables */
.index_as_table {
  overflow-x: auto;
}
table.striped {
  @extend .table;
  @extend .table-striped;
}

.index_table,
.panel_contents table,
.attributes_table table {
  @extend .table;
  @extend .table-striped;
  max-width: 100%;
  overflow: scroll;
 }

 table.schedules {
  @extend .table;
  @extend .table-striped;

  td {
    padding: 2.5px;

    input[type=checkbox] {
      margin-right: 5px;
      display: unset;
      width: unset;
      height: 13px;
    }
