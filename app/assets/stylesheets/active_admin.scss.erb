/* Sidebar */
.filter_form {
  .filter_form_field {
    @extend .form-group;

    input,select { @extend .form-control; margin-bottom: 5px; }
  }

  .buttons {
    input, a { @extend .btn; @extend .btn-default; margin-right: 5px;}
    input[type="submit"] { @extend .btn-primary;margin-right: 5px; }
