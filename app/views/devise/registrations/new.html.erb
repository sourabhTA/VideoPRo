<section class="login-section">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div id="second">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h1>Sign up</h1>
              </div>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :name, resource.role.nil? ? (params[:role] == 'pro' ? 'Name' : 'Business Name') : (resource.role == 'pro' ? 'Name' : 'Business Name'), class: 'ms-label' %><br />
                <%= f.text_field :name, class: 'form-control', required: true, autocomplete: 'new-password' %>
              </div>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'  %>
                <%= f.hidden_field :role, value: resource.role.nil? ? params[:role] : resource.role %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" , class: 'form-control'  %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control'  %>
              </div>
              <div class="form-group">
                <%= link_to 'I agree to the Terms and Conditions', terms_and_conditions_path, target: '_blank' %>
                <%= f.check_box :agree_to_terms_and_service %>
              </div>
              <div class="col-md-12 text-center mb-3">
                <%= flash[:recaptcha_error] %>
                <%= recaptcha_tags %>
              </div>
              <div class="col-md-12 text-center mb-3">
                <button type="submit" class="btn btn-primary tx-tfm">GET STARTED</button>
              </div>
              <div class="col-md-12 ">
                <div class="form-group">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
