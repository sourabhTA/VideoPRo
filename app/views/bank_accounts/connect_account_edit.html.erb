<div class="white-cont clearfix">
  <h3 class="m-b-5">Update Connect Account</h3>
</div>

<div class="white-cont clearfix">
  <div class="row">
    <div class="col-xs-12">
      <%= form_tag connect_account_update_path, method: :post do %>
        <div class="form-group">
          <%= label_tag :address_line_1 %>
          <br/>
          <%= text_field_tag :address_line_1, params[:address_line_1], { class: 'form-control fifty_percent', required: true, id: '', placeholder: 'Address'}   %>
        </div>
        <div class="form-group">
          <%= label_tag :city %>
          <br/>
          <%= text_field_tag :city, params[:city], { class: 'form-control thirty_percent', required: true} %>
        </div>
        <div class="form-group">
          <%= label_tag :state %>
          <br/>
          <%= text_field_tag :state, params[:state], { class: 'form-control thirty_percent', required: true}   %>
        </div>
        <div class="form-group">
          <%= label_tag :postal_code %>
          <br/>
          <%= text_field_tag :postal_code, params[:postal_code], { class: 'form-control thirty_percent', required: true } %>
        </div>
        <div class="form-group">
          <%= label_tag :date_of_birth, 'Date of birth' %>
          <br/>
          <div class='input-group'>
            <%= date_select 'date', 'of_birth', {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year - 100, end_year: Date.today.year - 13}, {required: true, class: 'form-control', style:'width: auto; margin-right: 10px;'} %>
          </div>
          <p class="hint">format: mm-dd-yyyy</p>
        </div>
        <div class="form-group">
          <%= label_tag :last_4_digits_of_ssn %>
          <br/>
          <%= text_field_tag :ssn, params[:ssn], { class: 'form-control thirty_percent', required: true, maxlength: 4}   %>
          <p class="hint">Please enter only last 4 characters</p>
        </div>
        <% if current_user.business? %>
          <div class="form-group">
            <%= label_tag :tax_id, "Taxpayer Identification Number (TIN)" %>
            <br/>
            <%= text_field_tag :tax_id, params[:tax_id], { class: 'form-control thirty_percent'} %>
            <p class="hint">e.g. Employer Identification Number (EIN) for U.S. businesses</p>
          </div>
        <% end %>
        <div class="form-group">
          <%= label_tag :phone_number %>
          <br/>
          <%= text_field_tag :phone_number, params[:phone_number], { class: 'form-control thirty_percent', required: true } %>
          <p class="hint">format: +x-xxx-xxx-xxxx</p>
        </div>
        <%= submit_tag 'Submit', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
