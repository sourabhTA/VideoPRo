<div class="white-cont clearfix">
  <h3 class="m-0"><%= raw @page.title %></h3>
</div>

<div class="white-cont clearfix">
  <div class="row">
    <div class="col-xs-12">
      <%= raw @page.main_details %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 text-center">
      <h2 class="text-center"><%= @page.video_title %></h2>
      <div class="video-container">
        <% if @page.video_url.present? && @page.video_url.include?('iframe') %>
          <%= raw @page.video_url %>
        <% elsif @page.video_url.present? %>
          <%= embed(@page.video_url, nil, nil, nil, nil) %>
        <% end %>
      </div>
    </div>
  </div>
</div>


