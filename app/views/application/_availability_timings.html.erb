            <th class='text-center'><%= f.select :saturday_break_end_time, time_options_for_select, {}, { class: 'form-control input-sm'} %></th>
            <th class='text-center'><%= f.select :sunday_break_end_time, time_options_for_select, {}, { class: 'form-control input-sm'} %></th>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>