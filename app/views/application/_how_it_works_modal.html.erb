<div class="modal" tabindex="-1" role="dialog" id="how_it_works_modal">
  <div class="modal-dialog mt-30" role="document">
    <div class="modal-content">
      <div class="modal-header" style="height: 55px;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" style="line-height: 30px;">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "how_it_works_body", {carousel_from: 'modal'} %>
      </div>
    </div>
  </div>
</div>
