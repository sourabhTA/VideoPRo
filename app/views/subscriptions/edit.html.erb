<div class="white-cont clearfix">
  <h3 class="m-b-5">Add new Card</h3>
</div>
<div class="white-cont clearfix">

<div class="row">
    <div class="col-xs-12">
      <%= form_for @subscriber, url: update_subscription_path(@subscriber), html: {id: 'subscription', method: :post} do |f| %>
        <%= render 'errors', {object: @subscriber} %>

        <span class="payment-errors m-b-15" style="color: crimson;"></span>

        <div class="form-group">
          <%= label_tag "Card Number"%>
          <%= text_field_tag nil, nil, data: { stripe: "number" }, class: 'form-control thirty_percent' %>
        </div>

        <div class="form-group">
          <%= label_tag "Expiration (MM/YY)" %>
          <br/>
          <%= text_field_tag nil, nil, data: { stripe: "exp_month" }, size: 4, class: 'form-control ten_percent pull-left' %>
          <span class="m-8 pull-left">/</span>
          <%= text_field_tag nil, nil, data: { stripe: "exp_year" }, size: 4, class: 'form-control ten_percent  pull-left' %>
        </div>

        <div class="clearfix"></div>
        <br/>

        <div class="form-group">
          <%= label_tag "CVC"%>
          <%= text_field_tag nil, nil, data: { stripe: "cvc" }, size: 4, class: 'form-control thirty_percent' %>
        </div>

        <%= f.submit 'Update Card', class: 'btn btn-primary', data: { disable_with: 'Processing...' } %>

      <% end %>

    </div>
  </div>
</div>