<div class="trade-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 sign_up_form">
        <div class="col-md-7 col-sm-12 sign_up_right_form">
          <%= render partial: "home/signup_left" %>
        </div>
        <div class="col-md-5 col-sm-12 text-center">
          <div class="myform form " id="sign_up">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h2 class="font-36">Sign up</h2>
              </div>
            </div>
            <div id="signup_div">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.label :name, resource.role.nil? ? (@role == 'pro' ? 'Name' : 'Business Name') : (resource.role == 'pro' ? 'Name' : 'Business Name'), class: 'ms-label' %><br />
                  <%= f.text_field :name, class: 'form-control', required: true, autocomplete: 'off' %>
                </div>
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, autocomplete: "email" , required: true, class: 'form-control'  %>
                  <%= f.hidden_field :role, value: resource.role.nil? ? @role : resource.role %>
                </div>
                <div class="form-group">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" , required: true, class: 'form-control'  %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation, autocomplete: "off" , required: true, class: 'form-control'  %>
                </div>
                <div class="form-group">
                  <%= link_to 'I agree to the Terms and Conditions', terms_and_conditions_path, target: '_blank' %>
                  <%= f.check_box :agree_to_terms_and_service, required: true %>
                </div>

                <div class="col-md-12 text-center m-b-15">
                  <%= flash[:recaptcha_error] %>
                  <%= recaptcha_tags %>
                </div>

                <div class="col-md-12 text-center mb-3">
                  <button type="submit" class="btn btn-primary tx-tfm">GET STARTED</button>
                </div>
                <div class="col-md-12 ">
                  <div class="form-group">
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
