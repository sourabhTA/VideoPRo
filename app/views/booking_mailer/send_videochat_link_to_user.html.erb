<div>
  <h3>
    Hello <%= booking.user %>.
  </h3>

  <% if booking.user.pro? %>
    <%= render partial: "pro_chat_to_user" %>
  <% elsif booking.user.business? %>
    <%= render partial: "business_chat_to_user" %>
  <% end %>

  <table border="0" cellpadding="0" cellspacing="0" class="module" data-role="module-button" data-type="button" role="module" style="table-layout:fixed;" width="100%" data-muid="1313a1d0-9ca7-4443-a8bb-b4b9ef73bb0d">
    <tbody>
      <tr>
        <td align="center" bgcolor="" class="outer-td" style="padding:0px 0px 0px 0px;">
          <table border="0" cellpadding="0" cellspacing="0" class="wrapper-mobile" style="text-align:center;">
            <tbody>
              <tr>
              <td align="center" bgcolor="#ED2939" class="inner-td" style="border-radius:6px; font-size:16px; text-align:center; background-color:inherit;">
                <p> - Download Mobile APP for IOS APP or Android APP <%= booking.user %></p>
              </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>

  <h4>Booking Details:</h4>
  <div class="well">
    <p>Booking Date: <%= booking.user_time.strftime("%m-%d-%Y") %></p>
    <p>Booking Time: <%= booking.user_time.strftime("%I:%M %p %Z") %></p>
    <p>Booking City: <%= booking.city %></p>
    <p>Booking State: <%= booking.state %></p>
    <p>Booking Issue: <%= booking.issue %></p>
  </div>

  <h4>Client Details:</h4>
  <div class="well">
    <p>Name: <%= booking.client %></p>
    <p>Phone: <%= booking.client.phone_number %></p>
    <p>Email: <%= booking.client.email %></p>
  </div>
</div>

<p>
  Thank You
  Video Chat a Pro
</p>
